{
  "name": "@yagisumi/hello",
  "version": "0.1.0",
  "description": "say hello",
  "keywords": [],
  "private": true,
  "main": "lib/hello.js",
  "types": "lib/hello.d.ts",
  "scripts": {
    "test": "jest",
    "doc": "typedoc  --tsconfig ./lib/tsconfig.json --json ./docs/typedoc.json ./lib",
    "build": "run-s build:*",
    "clean": "rimraf coverage lib/**/*.{js,map,d.ts} test/**/*.{js,map,d.ts} *.tgz",
    "build:lib": "tsc -p lib",
    "build:test": "tsc -p test",
    "tslint": "tslint --exclude **/*.d.ts lib/**/*.{ts,tsx} test/**/*.ts",
    "tslint:json": "tslint --format json --exclude **/*.d.ts lib/**/*.{ts,tsx} test/**/*.ts",
    "tslint:fix": "tslint --fix --exclude **/*.d.ts lib/**/*.{ts,tsx} test/**/*.ts",
    "prepack": "run-s build test"
  },
  "author": "Yagi Sumiya",
  "repository": "github:yagisumi/node-hello",
  "homepage": "http://github.com/yagisumi/node-hello#readme",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.12",
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typedoc": "^0.13.0",
    "typescript": "^3.2.2"
  }
}
